/* pages/index/index.wxss */
.top{
  background-image: url('https://cdn-app.zdpvt.com/public/531395789cf747f3b4c972a16af7fbf7.png');
  background-size: 100% 100%;
  padding: 55px 0 45px 0;
  color: #fff;
}
.money{
  display: block;
  text-align: center;
  font-size: 60px;
  font-weight: bold;
}
.tips{
  font-size: 12px;
  display: block;
  text-align: center;
}
.con{
  display: flex;
}
.con >view{
  margin: auto;
}
.con .num{
  display: block;
  text-align: center;
  font-size: 24px;
  font-weight: bold;
}
.card{
  margin: -25px 10px 10px 10px;
  padding: 1px 24px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  background: #fff;
}
.card > .con{
  display: flex;
  margin: 40px 0;
  justify-content: space-between;
}
.card .item{
  display: inline-block;
  width: 50px;
}
.card .item image{
  width: 100%;
  display: block;
  height: 50px;
}
.card .item text{
  font-size: 12px;
  color: #666666;
  display: block;
  margin-top: 14px;
  text-align: center;
}