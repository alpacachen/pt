/* pages/detail/detail.wxss */
.banner{
  width: 100%;
  display: block;
}
.time{
  position: absolute;
  top: 10px;
  padding: 5px 15px;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  background: rgba(0, 191, 74,0.8);
  color: #fff;
  font-size: 14px;
}
.con{
  padding: 25px 15px;
  border-bottom: 1px solid #cccccc;
  background: #fbfbfb;
}
.gary{
  display: block;
  margin-top: 13px;
  color: #999999;
  font-size: 12px;
}
.avatar{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10px;
}
.name{
  font-size: 13px;
  font-family: PingFangSC-Light;
}
.arrow{
  width: 10px;
  height: 15px;
  float: right;
  margin-top: 10px;
}
.detail{
  font-size: 14px;
  font-family: PingFangSC-Light;
}
.con_2{
  padding: 15px;
  background: #fbfbfb;
}
.con_2 image{
  width: 100%;
  display: block;
  margin-bottom: 10px;
}
.zw{
  height: 49px;
}
.bot{
  position: fixed;
  bottom: 0;
  height: 49px;
  background: #fff;
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.bot text{
  display: block;
}
.share{
  margin: 5px;
  width: 20vw;
  display: inline-block;
  border-right: 1px solid #cccccc;
  background: #fff;
  border-radius: 0;
}
.share image{
  width: 20px;
  height: 20px;
  display: block;
  margin: auto;
}
button[class="share"]::after {
  border: 0;
} 
.share text{
  display: block;
  font-size: 12px;
  color: #999999;
  text-align: center;
  margin-top: -5px;
}
.gary_area{
  display: inline-block;
  width: 40vw;
  text-align: center;
  color: #333;
}
.green_area{
  display: inline-block;
  background: #00bf4a;
  text-align: center;
  width: 40vw;
  color: #fff;
}
.li{
  font-family: PingFangSC-Light;
  font-size: 12px;
  margin-top: 5px;
}
.me{
  font-family: PingFangSC-Medium;
  font-size: 14px;
}