/* pages/personal/personal.wxss */
.banner{
  position: relative;
}
.banner > image{
  display: block;
  width: 100%;
  height: 205px;
}
.con{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
}
.con>view{
  margin: 20px auto auto auto;
}
.avatar{
  width: 110px;
  height: 110px;
  display: flex;
  border: 1px solid #fff;
  border-radius: 50%;
  font-size: 0;
}
.avatar image{
  width: 89%;
  display: block;
  margin: auto;
  height: 89%;
  border: 1px solid #fff;
  border-radius: 50%;
}
.name{
  display: block;
  color: #fff;
  font-family: PingFangSC-Regular;
  font-size: 18px;
  text-align: center;
  margin-top: 13px;
}
.card{
  margin: -15px 15px 15px 15px;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
  display: flex;
  padding: 40px 0;
  background: #fff;
  position: relative;
  border-radius: 10px;
  z-index: 4;
}
.card > view{
  margin: auto;
  font-size: 0;
}
.card image{
  width: 43px;
  margin: auto;
  display: block;
  margin-bottom: 20px;
}
.card > view >text{
  font-size: 14px;
  color: #333;
  font-family: PingFangSC-Regular;
  display: block;
  text-align: center;
}
.gap{
  width: 1px;
  background: #f0f0f0;
  margin: auto 0!important;
  height: 70px;
}