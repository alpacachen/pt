/* pages/manageproject/manageproject.wxss */

.wrap {
  background: #f0f0f0;
  min-height: 100vh;
}

.tab {
  background: #fff;
  text-align: center;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.tab>view {
  display: inline-block;
  margin: 7px 40px;
  padding: 7px 0;
  font-size: 14px;
}

.active {
  border-bottom: 1px solid #00ad42;
}

.card {
  margin: 15px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  padding: 10px 15px;
  border-radius: 5px;
  background: #fff;
}

.title {
  display: flex;
  justify-content: space-between;
  padding-bottom: 5px;
  border-bottom: 1px solid #ccc;
}

.stat {
  font-size: 12px;
  color: #999;
}

.user {
  font-size: 12px;
  color: #999;
  position: relative;
}

.user > image {
  width: 22px;
  height: 22px;
  vertical-align: middle;
  border-radius: 50%;
  display: inline-block;
  margin-right: 4px;
}

.con {
  margin-top: 10px;
  display: flex;
  padding-bottom: 7px;
  border-bottom: 1px solid #ccc;
}

.con image {
  width: 50px;
  height: 50px;
  display: inline-block;
  margin-right: 15px;
  vertical-align: top;
}

.con >view {
  display: inline-flex;
  height: 50px;
  position: relative;
  flex-direction: column;
  width: calc(100% - 115px);
}

.name {
  display: block;
  margin: auto 0;
  font-family: PingFangSC-Medium;
}

.bottom {
  font-size: 13px;
  display: block;
  margin: auto 0;
  color: #999;
}

.time {
  font-size: 12px;
  color: #999;
  padding-top: 5px;
}

.notfound {
  margin-top: 20vh;
}

.notfound image {
  width: 70%;
  display: block;
  margin: auto;
}

.notfound text {
  display: block;
  color: #999999;
  text-align: center;
  font-size: 14px;
  margin-top: 15px;
}
