/* pages/makewithdraw/makewithdraw.wxss */
.wrap{
  background: #f0f0f0;
  min-height: 100vh;
  padding-top: 1px;
}
.con{
  background: #ffffff;
  margin: 30px 0;
  padding: 15px;
}
.con .title{
  font-size: 15px;
  font-family: PingFangSC-Light;
}
.con_1{
  margin: 30px 0 0 0;
  padding-bottom: 20px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}
.con_1 > view{
  display: inline-block;
}
.left{
  font-size: 30px;
  font-family: PingFangSC-blod;
}
.left input{
  display: inline-block;
  margin-left: 4px;
  max-width: 50vw;
}
.right{
  font-size: 14px;
  width: 6.5em;
  position: relative;
  color: rgb(255,76,76);
  vertical-align: bottom;
}
.right text{
  position: absolute;
  bottom: 6px;
  right: 0;
}
.con_2{
  margin-top: 10px;
  display: flex;
  font-size: 15px;
  justify-content: space-between;
}
.balance{
  color: #cccccc;
}
.all{
  color: rgb(0, 175, 65);
}
.but{
  margin: 0 20px;
  background: #00bf4a;
  color: #fff;
}
.gary{
  color: #999;
  display: block;
  text-align: center;
  font-size: 15px;
  margin: 10px;
}