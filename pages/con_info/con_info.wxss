/* pages/con_info/con_info.wxss */
.wrap{
  height: 100vh;
  background: #f0f0f0;
}
.title{
  font-size: 12px;
  font-family:PingFangSC-Regular;
  color: #666666;
  display: block;
  padding: 15px 15px;
}
.card_1{
  background: #fff;
  padding: 0px 15px;
}
.up_logo{
  display: flex;
  justify-content: space-between;
  padding: 15px 0;
  border-bottom: 1px solid #cccccc;
}
.up_logo .right{
  display: inline-block;
  position: relative;
  width: 70px;
  height: 70px;
}
.up_logo .right .bg{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 9px;
  background: rgb(204, 204, 204);
}

.up_logo .right .text{
  position: absolute;
  width: 100%;
  background: #000;
  color: #fff;
  bottom: 0;
  font-size: 12px;
  text-align: center;
  border-bottom-left-radius: 9px;
  border-bottom-right-radius: 9px;
}

.up_logo .left{
  display: inline-block;
}
.up_logo .left .left_1{
  display: block;
  font-family:PingFangSC-Medium;
  font-size: 14px;
  color: #333333;
  margin-bottom: 14px;
}
.up_logo .left .left_2{
  display: block;
  font-family:PingFangSC-Regular;
  font-size: 12px;
  color: #999999;
}
.line{
  padding: 15px 0;
  border-bottom: 1px solid #cccccc;
}
.line .lt{
  font-family:PingFangSC-Medium;
  font-size: 14px;
  color: #333333;
}
.line .rt{
    font-family:PingFangSC-Regular;
  font-size: 12px;
  color: #999999;
  float: right;
  text-align: right;
}
.but{
  margin: 25px 20px;
  background: #00bf4a;
  color: #fff;
}